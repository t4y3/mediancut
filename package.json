{
  "name": "mediancut",
  "version": "2.1.11",
  "description": "Image reduction by Mediancut algorithm",
  "main": "lib/mediancut.mjs",
  "module": "lib/mediancut.mjs",
  "types": "lib/mediancut.d.mts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf lib",
    "prepublishOnly": "npm run clean && npm run build && npm run types",
    "build": "tsup src/mediancut.ts --format esm,iife --global-name Mediancut --dts --minify --out-dir lib",
    "watch": "tsup src/mediancut.ts --format esm,iife --global-name Mediancut --dts --minify --out-dir lib --watch",
    "types": "tsc -d --emitDeclarationOnly"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "biome lint src",
      "biome format --write src"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit $1",
    "pre-commit": "npx lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t4y3/mediancut.git"
  },
  "keywords": [
    "mediancut",
    "gradation",
    "canvas"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/t4y3/mediancut/issues"
  },
  "homepage": "https://github.com/t4y3/mediancut#readme",
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "lint-staged": "^15.2.0",
    "semantic-release": "^23.0.0",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "volta": {
    "node": "21.6.1",
    "npm": "10.4.0"
  }
}
